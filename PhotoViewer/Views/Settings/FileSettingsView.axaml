<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PhotoViewer.ViewModels"
             xmlns:controls="clr-namespace:PhotoViewer.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="PhotoViewer.Views.FileSettingsView"
             x:DataType="vm:SettingsViewModel">

    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>
    
    <StackPanel Background="#333">
        <!-- 支持文件格式 -->
        <StackPanel Classes="settings-container">
            <TextBlock Classes="settings-title">
                支持的文件格式
            </TextBlock>
            <Border Classes="settings-card">
                <controls:SortableList ItemsSource="{Binding FileFormats}"
                                       MoveCommand="{Binding MoveFileFormatCommand}">
                    <controls:SortableList.ItemTemplate>
                        <DataTemplate x:DataType="vm:SettingsViewModel+FileFormatItem">
                            <Grid ColumnDefinitions="Auto,*">
                                <!-- 勾选框 -->
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding IsEnabled}" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,8,0" />
                                
                                <!-- 格式信息 -->
                                <Grid Grid.Column="1" 
                                           VerticalAlignment="Center"
                                           RowDefinitions="Auto"
                                           ColumnDefinitions="Auto,*">
                                    <!-- 格式名称 -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding DisplayName}" 
                                               VerticalAlignment="Center"
                                               MinWidth="30"
                                               FontWeight="Medium" 
                                               FontSize="14" />
                                    <!-- 扩展名列表 -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding ExtensionsText}" 
                                               VerticalAlignment="Center"
                                               FontSize="11" 
                                               Foreground="#AAA" 
                                               TextWrapping="WrapWithOverflow"
                                               Margin="10,2,0,0" />
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </controls:SortableList.ItemTemplate>
                </controls:SortableList>
            </Border>

            <Border Classes="settings-card">
                <StackPanel Spacing="8" Margin="2">
                    
                    <CheckBox Classes="settings-checkbox"
                              IsChecked="{Binding SameNameAsOnePhoto}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Classes="settings-label">同名文件视为同一张图片</TextBlock>
                            <TextBlock Classes="settings-description">按列表排序优先级高的作为代表显示图片，修改星级时同步至所有同名文件</TextBlock>
                        </StackPanel>
                    </CheckBox>
                    
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 新增：缓存与预加载 -->
        <StackPanel Classes="settings-container">
            <TextBlock Classes="settings-title">缓存与预加载</TextBlock>
            <Border Classes="settings-card">
                <StackPanel Spacing="10" Margin="4">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Classes="settings-label" Text="最大缓存数量" Width="110"/>
                        <TextBox Text="{Binding BitmapCacheMaxCount}" Width="80"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Classes="settings-label" Text="前向预取数量" Width="110"/>
                        <TextBox Text="{Binding PreloadForwardCount}" Width="80"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Classes="settings-label" Text="后向预取数量" Width="110"/>
                        <TextBox Text="{Binding PreloadBackwardCount}" Width="80"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Classes="settings-label" Text="可见中心预取" Width="110"/>
                        <TextBox Text="{Binding VisibleCenterPreloadCount}" Width="80"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Classes="settings-label" Text="滚动停顿延时(ms)" Width="110"/>
                        <TextBox Text="{Binding VisibleCenterDelayMs}" Width="80"/>
                    </StackPanel>
                    <TextBlock Classes="settings-description"
                               Text="说明：当前图片加载完成后后台按前后顺序预取；滚动停止后延时再预取可见区域最居中的若干张；所有来源共享一个缓存池。"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </StackPanel>

</UserControl>