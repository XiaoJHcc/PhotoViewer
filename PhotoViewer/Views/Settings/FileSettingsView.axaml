<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PhotoViewer.ViewModels"
             xmlns:controls="clr-namespace:PhotoViewer.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="PhotoViewer.Views.FileSettingsView"
             x:DataType="vm:SettingsViewModel">

    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>
    
    <StackPanel Background="#333">
        <!-- 支持文件格式 -->
        <StackPanel Classes="settings-container">
            <TextBlock Classes="settings-title">
                支持的文件格式
            </TextBlock>
            <Border Classes="settings-card">
                <controls:SortableList ItemsSource="{Binding FileFormats}"
                                       MoveCommand="{Binding MoveFileFormatCommand}">
                    <controls:SortableList.ItemTemplate>
                        <DataTemplate x:DataType="vm:SettingsViewModel+FileFormatItem">
                            <Grid ColumnDefinitions="Auto,*">
                                <!-- 勾选框 -->
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding IsEnabled}" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,4,0" />
                                
                                <!-- 格式信息 -->
                                <Grid Grid.Column="1" 
                                           VerticalAlignment="Center"
                                           RowDefinitions="Auto"
                                           ColumnDefinitions="Auto,*">
                                    <!-- 格式名称 -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding DisplayName}" 
                                               VerticalAlignment="Center"
                                               MinWidth="30"
                                               FontWeight="Medium" 
                                               FontSize="14" />
                                    <!-- 扩展名列表 -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding ExtensionsText}" 
                                               VerticalAlignment="Center"
                                               FontSize="11" 
                                               Foreground="#AAA" 
                                               TextWrapping="WrapWithOverflow"
                                               Margin="10,2,0,0" />
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </controls:SortableList.ItemTemplate>
                </controls:SortableList>
            </Border>

            <Border Classes="settings-card">
                <StackPanel Spacing="8" Margin="2">
                    
                    <CheckBox Classes="settings-checkbox"
                              IsChecked="{Binding SameNameAsOnePhoto}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Classes="settings-label">同名文件视为同一张图片</TextBlock>
                            <TextBlock Classes="settings-description">按列表排序优先级高的作为代表显示图片，修改星级时同步至所有同名文件</TextBlock>
                        </StackPanel>
                    </CheckBox>
                    
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 新增：缓存与预加载 -->
        <StackPanel Classes="settings-container">
            <TextBlock Classes="settings-title">缓存与预加载</TextBlock>
            <Border Classes="settings-card">
                <StackPanel Spacing="10" Margin="4">
                    <Grid Classes="settings-numeric"
                          ColumnDefinitions="120,*,60">
                        <TextBlock Classes="settings-label" Text="并行预载线程" />
                        <Slider Grid.Column="1" 
                                Minimum="0"
                                Maximum="1"
                                Value="{Binding PreloadParallelismExp}" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding PreloadParallelism}" />
                    </Grid>
                    
                    <Grid Classes="settings-numeric"
                          ColumnDefinitions="120,*,60">
                        <TextBlock Classes="settings-label" Text="内存上限 (MB)" />
                        <Slider Grid.Column="1" 
                                Minimum="0"
                                Maximum="1"
                                Value="{Binding BitmapCacheMaxMemoryExp}" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding BitmapCacheMaxMemory}" />
                    </Grid>
                    <TextBlock Classes="settings-description" 
                               Margin="8, 0, 8, 0"
                               Text="{Binding MemoryBudgetInfo}" />
                    
                    <Grid Classes="settings-numeric"
                          ColumnDefinitions="120,*,60">
                        <TextBlock Classes="settings-label" Text="缓存数量上限" />
                        <Slider Grid.Column="1" 
                                Minimum="0"
                                Maximum="1"
                                Value="{Binding BitmapCacheMaxCountExp}" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding BitmapCacheMaxCount}" />
                    </Grid>
                    <TextBlock Classes="settings-description" 
                               Margin="8, 0, 8, 0"
                               Text="{Binding BitmapCacheCountInfo}" />
                    
                    <Grid Classes="settings-numeric"
                          ColumnDefinitions="120,*,60">
                        <TextBlock Classes="settings-label secondary" Text="下一张预载数量" />
                        <Slider Grid.Column="1" 
                                Minimum="0"
                                Maximum="33.3333333"
                                Value="{Binding PreloadForwardPercent}" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding PreloadForwardCount}" />
                    </Grid>
                    <Grid Classes="settings-numeric"
                          ColumnDefinitions="120,*,60">
                        <TextBlock Classes="settings-label secondary" Text="上一张预载数量" />
                        <Slider Grid.Column="1" 
                                Minimum="0"
                                Maximum="33.3333333"
                                Value="{Binding PreloadBackwardPercent}" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding PreloadBackwardCount}" />
                    </Grid>
                    <Grid Classes="settings-numeric"
                          ColumnDefinitions="120,*,60">
                        <TextBlock Classes="settings-label secondary" Text="列表滚动预载数量" />
                        <Slider Grid.Column="1" 
                                Minimum="0"
                                Maximum="33.3333333"
                                Value="{Binding VisibleCenterPreloadPercent}" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding VisibleCenterPreloadCount}" />
                    </Grid>
                    <Grid Classes="settings-numeric"
                          ColumnDefinitions="120,*,60">
                        <TextBlock Classes="settings-label secondary" Text="滚动预载延时 (ms)" />
                        <Slider Grid.Column="1" 
                                Minimum="0"
                                Maximum="1"
                                Value="{Binding VisibleCenterDelayExp}" />
                        <TextBox Grid.Column="2" 
                                 Text="{Binding VisibleCenterDelayMs}" />
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </StackPanel>

</UserControl>