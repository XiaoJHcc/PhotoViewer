<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PhotoViewer.ViewModels"
             xmlns:controls="clr-namespace:PhotoViewer.Controls"
             xmlns:views="clr-namespace:PhotoViewer.Views"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="PhotoViewer.Views.ControlSettingsView"
             x:DataType="vm:SettingsViewModel">

    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>

    <StackPanel Background="#333">
        <StackPanel Classes="settings-container">
            <TextBlock Classes="settings-title">
                控制栏布局位置
            </TextBlock>
            <Border Classes="settings-card">
                <StackPanel Spacing="8">
                    <ComboBox Classes="settings-combobox" 
                              ItemsSource="{Binding LayoutModes}"
                              SelectedValue="{Binding LayoutMode}"
                              SelectedValueBinding="{Binding Value}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontWeight="Medium" />
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="11"
                                               Foreground="#999"
                                               Margin="10,2,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Border>

            <TextBlock Classes="settings-title">
                EXIF 显示/收纳
            </TextBlock>
            <Border Classes="settings-card">
                <controls:SortableList ItemsSource="{Binding ExifDisplayItems}"
                                       MoveCommand="{Binding MoveExifDisplayCommand}">
                    <controls:SortableList.ItemTemplate>
                        <DataTemplate DataType="vm:SettingsViewModel+ExifDisplayItem">
                            <StackPanel Orientation="Horizontal">
                                <!-- 勾选框 -->
                                <CheckBox IsChecked="{Binding IsEnabled}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,12,0" />

                                <!-- EXIF 名称 -->
                                <TextBlock Text="{Binding DisplayName}"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           FontSize="13"
                                           Margin="0,0,12,0" />
                            </StackPanel>
                        </DataTemplate>
                    </controls:SortableList.ItemTemplate>
                </controls:SortableList>
            </Border>
            
            <Border Classes="settings-card">
                <StackPanel Spacing="8" Margin="2">
                    <CheckBox Classes="settings-checkbox"
                              IsChecked="{Binding ShowRating}">
                        显示星级评分
                    </CheckBox>
                    <CheckBox Classes="settings-checkbox"
                              IsChecked="{Binding SafeSetRating}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Classes="settings-label">安全修改文件星级</TextBlock>
                            <TextBlock Classes="settings-description">检验文件字节变化再写回，避免损坏文件，但速度较慢</TextBlock>
                        </StackPanel>
                    </CheckBox>
                </StackPanel>
            </Border>

            <TextBlock Classes="settings-title">
                控制栏功能/快捷键
            </TextBlock>
            <Border Classes="settings-card">
                <controls:SortableList ItemsSource="{Binding Hotkeys}"
                                       MoveCommand="{Binding MoveHotkeyCommand}">
                    <controls:SortableList.ItemTemplate>
                        <DataTemplate DataType="vm:SettingsViewModel+HotkeyItem">
                            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                <!-- 勾选框 -->
                                <CheckBox Grid.Column="0"
                                          IsChecked="{Binding IsEnabled}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,12,0" />

                                <!-- 功能名称 -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Name}"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           Margin="0,0,12,0" />

                                <!-- 主要快捷键 -->
                                <controls:HotkeyButton Grid.Column="2"
                                                       Hotkey="{Binding PrimaryHotkey}"
                                                       HasConflict="{Binding HasPrimaryConflict}"
                                                       HotkeyChanged="OnPrimaryHotkeyChanged"
                                                       Margin="0,0,8,0" />

                                <!-- 次要快捷键 -->
                                <controls:HotkeyButton Grid.Column="3"
                                                       Hotkey="{Binding SecondaryHotkey}"
                                                       HasConflict="{Binding HasSecondaryConflict}"
                                                       HotkeyChanged="OnSecondaryHotkeyChanged" />
                            </Grid>
                        </DataTemplate>
                    </controls:SortableList.ItemTemplate>
                </controls:SortableList>
            </Border>
        </StackPanel>
    </StackPanel>

</UserControl>