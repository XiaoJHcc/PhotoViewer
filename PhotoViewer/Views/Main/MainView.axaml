<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PhotoViewer.ViewModels"
             xmlns:views="clr-namespace:PhotoViewer.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PhotoViewer.Views.MainView"
             x:DataType="vm:MainViewModel">
    <Grid>
        <!-- 垂直布局（上中下）-->
        <Grid RowDefinitions="Auto,*,Auto" IsVisible="{Binding !IsHorizontalLayout}">
            <!-- 顶部：缩略图栏 -->
            <Border
                x:Name="TopThumbHost"
                Grid.Row="0"
                Margin="-100, -100, -100, 0"
                Padding="100, 100, 100, 0"
                Background="#111111"
                BorderBrush="#333333"
                BorderThickness="0,0,0,1">
                <views:ThumbnailView x:Name="TopThumbnailView" DataContext="{Binding FolderVM}" />
            </Border>

            <!-- 中间：图片显示区域 -->
            <views:ImageView
                Grid.Row="1"
                Background="#000000"
                DataContext="{Binding ImageVM}" />

            <!-- 底部：控制栏 -->
            <Border
                Grid.Row="2"
                Margin="-100, 0, -100, -100"
                Padding="100, 0, 100, 100"
                Background="#111111"
                BorderBrush="#333333"
                BorderThickness="0,1,0,0">
                <views:ControlView DataContext="{Binding ControlVM}" />
            </Border>
        </Grid>

        <!-- 水平布局（左中右）-->
        <Grid ColumnDefinitions="Auto,*,Auto" IsVisible="{Binding IsHorizontalLayout}">
            <!-- 左侧：缩略图栏 -->
            <Border
                x:Name="LeftThumbHost"
                Grid.Column="0"
                Margin="-100, -100, 0, -100"
                Padding="100, 100, 0, 100"
                Background="#111111"
                BorderBrush="#333333"
                BorderThickness="0,0,1,0">
                <views:ThumbnailView x:Name="LeftThumbnailView" DataContext="{Binding FolderVM}" />
            </Border>

            <!-- 中间：图片显示区域 -->
            <views:ImageView
                Grid.Column="1"
                Background="#000000"
                DataContext="{Binding ImageVM}" />

            <!-- 右侧：控制栏 -->
            <Border
                Grid.Column="2"
                Margin="0, -100, -100, -100"
                Padding="0, 100, 100, 100"
                Background="#111111"
                BorderBrush="#333333"
                BorderThickness="1,0,0,0">
                <views:ControlView DataContext="{Binding ControlVM}" />
            </Border>
        </Grid>
    </Grid>
</UserControl>