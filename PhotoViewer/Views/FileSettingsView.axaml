<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PhotoViewer.ViewModels"
             xmlns:controls="clr-namespace:PhotoViewer.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="PhotoViewer.Views.FileSettingsView"
             x:DataType="vm:SettingsViewModel">

    <Design.DataContext>
        <vm:SettingsViewModel />
    </Design.DataContext>
    
    <StackPanel Background="#333">
        <StackPanel MaxWidth="300">
            <TextBlock Margin="20,20,0,10">
                支持文件格式
            </TextBlock>
            <Border BorderBrush="#444"
                    BorderThickness="1"
                    CornerRadius="10"
                    Background="#222"
                    Padding="8">
                <controls:SortableList ItemsSource="{Binding FileFormats}"
                                       MoveCommand="{Binding MoveFileFormatCommand}">
                    <controls:SortableList.ItemTemplate>
                        <DataTemplate x:DataType="vm:SettingsViewModel+FileFormatItem">
                            <Grid ColumnDefinitions="Auto,*">
                                <!-- 勾选框 -->
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding IsEnabled}" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,8,0" />
                                
                                <!-- 格式名称 -->
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Name}" 
                                           VerticalAlignment="Center" 
                                           FontWeight="Medium" />
                            </Grid>
                        </DataTemplate>
                    </controls:SortableList.ItemTemplate>
                </controls:SortableList>
            </Border>
        </StackPanel>

        <!-- <TextBlock Margin="5">缓存</TextBlock> -->
        <!-- -->
        <!-- <StackPanel Orientation="Horizontal" Spacing="10"> -->
        <!--     <TextBlock Text="缓存大小 (MB)" VerticalAlignment="Center" /> -->
        <!--     <Slider Minimum="50" Maximum="2000" Value="{Binding MaxCacheSizeMB}" Width="200" /> -->
        <!--     <TextBlock Text="{Binding MaxCacheSizeMB}" MinWidth="30" /> -->
        <!-- </StackPanel> -->
    </StackPanel>

</UserControl>