<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:PhotoViewer.Views"
             xmlns:viewModels="clr-namespace:PhotoViewer.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="120"
             x:Class="PhotoViewer.Views.ThumbnailView"
             x:DataType="local:ThumbnailView">
    
    <UserControl.Resources>
        <local:BoolToCurrentBorderConverter x:Key="BoolToBorderConverter"/>
    </UserControl.Resources>
    
    <Design.DataContext>
        <viewModels:ThumbnailViewModelDesignData/>
    </Design.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 排序工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="5" HorizontalAlignment="Center">
            <ComboBox Name="SortByComboBox" SelectedIndex="0" MinWidth="100">
                <ComboBoxItem>按名称</ComboBoxItem>
                <ComboBoxItem>按时间</ComboBoxItem>
            </ComboBox>
            
            <ComboBox Name="OrderComboBox" SelectedIndex="0" MinWidth="80">
                <ComboBoxItem>正序</ComboBoxItem>
                <ComboBoxItem>倒序</ComboBoxItem>
            </ComboBox>
            
            <Button Name="CenterButton" Content="复位" Width="80" Click="CenterButton_Click"/>
        </StackPanel>
        
        <!-- 缩略图列表 -->
        <ScrollViewer Grid.Row="1" Name="ThumbnailScrollViewer" 
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Visible">
            <ItemsControl Name="ThumbnailItemsControl"
                          ItemsSource="{Binding ViewModel.ThumbnailItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="5"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="2" 
                                BorderBrush="{Binding IsCurrent, Converter={StaticResource BoolToBorderConverter}}"
                                CornerRadius="4"
                                Margin="2"
                                Width="80"
                                Height="80"
                                Background="#F0F0F0">
                            <Grid>
                                <!-- 图片缩略图 -->
                                <Image Source="{Binding Image}" 
                                       Stretch="UniformToFill"
                                       IsVisible="{Binding Image, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                                
                                <!-- 文件名占位符 -->
                                <TextBlock Text="{Binding File.Name}" 
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Padding="5"
                                           FontSize="10"
                                           MaxWidth="80"
                                           MaxHeight="80"
                                           Tag="{Binding File}"
                                           IsVisible="{Binding Image, Converter={x:Static ObjectConverters.IsNull}}"
                                           PointerPressed="Thumbnail_PointerPressed"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
